{
  "name": "smart-email-reminders-mcp",
  "version": "0.1.0",
  "description": "Intelligent MCP server that reads email processing rules from Obsidian and creates Apple Reminders automatically using AI-powered parsing",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "bin": {
    "smart-email-reminders": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "daemon:start": "node dist/daemon.js",
    "daemon:stop": "pkill -f smart-email-reminders",
    "setup": "node dist/setup.js"
  },
  "keywords": [
    "mcp",
    "claude",
    "email",
    "reminders",
    "obsidian",
    "ai",
    "automation",
    "gmail",
    "icloud",
    "apple"
  ],
  "author": "Gonzalo Riederer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/griederer/smart-email-reminders-mcp"
  },
  "bugs": {
    "url": "https://github.com/griederer/smart-email-reminders-mcp/issues"
  },
  "homepage": "https://github.com/griederer/smart-email-reminders-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "commander": "^12.1.0",
    "googleapis": "^144.0.0",
    "imap": "^0.8.19",
    "mailparser": "^3.7.4",
    "node-cron": "^3.0.3",
    "winston": "^3.13.1",
    "yaml": "^2.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/imap": "^0.8.42",
    "@types/jest": "^29.5.12",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.4",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "darwin"
  ],
  "files": [
    "dist/**/*",
    "templates/**/*",
    "config/**/*"
  ]
}
